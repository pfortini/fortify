{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "semi": ["error", "always"],
    "curly": ["error", "multi-or-nest"],
    "space-before-function-paren": "off",
    "eqeqeq": "off",
    "quotes": "error",
    "object-curly-newline": ["error", { "multiline": true }],
    "no-throw-literal": "off",
    "new-cap": "off",
    "no-useless-constructor": "off"
  }
}
